<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crear producto</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <link href="/styles/centerbody.css" rel="stylesheet" />
    <link href="/styles/productform.css" rel="stylesheet" />
  </head>

  <% productos = data.data %>

  <body>
    <form
      id="formProduct"
    >
      <div class="form-group">
        <label for="name">Nombre del producto</label>
        <input
          type="text"
          class="form-control"
          placeholder="Ingrese el nombre del producto"
          name="name"
        />
      </div>
      <div class="form-group">
        <label for="image">Imagen</label>
        <input
          class="form-control"
          placeholder="Ingrese una url"
          name="image"
        />
      </div>
      <div class="form-group">
        <label for="description">Descripcion</label>
        <input
          class="form-control"
          placeholder="DescripciÃ³n..."
          name="description"
        />
      </div>
      <div class="form-group">
        <label for="price">Precio</label>
        <input
          class="form-control"
          placeholder="Precio..."
          name="price"
        />
      </div>
      <div class="form-group">
        <label for="stock">Stock</label>
        <input
          class="form-control"
          placeholder="Stock..."
          name="stock"
        />
      </div>
      <button id="submitProduct" type="submit" class="btn btn-primary">
        Submit
      </button>
    </form>

    <br>

    <table id="table" class="table table-dark">
      <thead>
        <tr>
          <th scope="col">Nombre</th>
          <th scope="col">Descripcion</th>
          <th scope="col">Imagen</th>
          <th scope="col">Precio</th>
          <th scope="col">Stock</th>
        </tr>
      </thead>
      <tbody id="rowContainer">
          <% productos.forEach(p => { %>
        <tr>
          <td><%=p.name%></td>
          <td><%=p.description%></td>
          <td><%=p.image%></td>
          <td>$<%=p.price%></td>
          <td><%=p.stock%></td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <form id="chat" class="chat">
      <ul id="chatMessages" class="chat_messages">
        
      </ul>
      <input name="email" type="email" placeholder="Email..." required>
      <input name="name" type="text" placeholder="Nombre..." required>
      <input name="lastname" type="text" placeholder="Apellido..." required>
      <input name="age" type="number" placeholder="Age..." required>
      <input name="alias" type="text" placeholder="Alias..." required>
      <input name="avatar" type="avatar" placeholder="Avatar..." required>
      <input name="text" type="text" placeholder="Mensaje..." required>
      <input type="submit" value="Enviar">
    </form>

    <a href="/">Inicio</a>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/scripts/io.js"></script>
    <script src="/scripts/submit.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  </body>
</html>
